<%= form_for(@implement) do |f| %>

<%= render 'shared/errors' %>

	<p>
		<%= f.label :image_file_name %><br/>
		<%= f.text_field :image_file_name, size:40, placeholder:"GIF, JPG, or PNG file name" %>
	</p>
	<p>
		<%= f.label :model %><br/>
		<%= f.text_field :model, autofocus: true %>
	</p>
	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description, cols:40, rows:7 %>
	</p>
	<p>
		<%= f.label :equipment_category %><br/>
		<%= f.text_field :equipment_category %>
	</p>
	<p>
		<%= f.label :horsepower %><br/>
		<%= f.number_field :hp %>
	</p>
	<p>
		<%= f.label :list_price %><br/>
		<%= f.number_field :list_price %>
	</p>
	<p>
		<%= f.label :special_offers %><br/>
		<%= f.number_field :special_offers %>
	</p>
	<p>
		<%= f.label :in_stock %>
		<%= f.number_field :in_stock %>
	</p>
	<p>
		<%= f.submit %>
		<%= link_to "Cancel", implements_path %>
	</p>
<% end %>